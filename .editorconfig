root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4

# Project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2

# Config files
[*.{json,xml,yml,yaml}]
indent_style = space
indent_size = 2

# Exclude GdUnit4 addon files from formatting
[addons/gdUnit4/**]
generated_code = true

# Exclude Godot generated files
[.godot/**]
generated_code = true

# Exclude generated assembly info
[**/AssemblyInfo.cs]
generated_code = true
